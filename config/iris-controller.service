[Unit]
Description=IRIS Controller - Queue-based AI orchestration system
After=network.target

[Service]
Type=simple
User=claude
WorkingDirectory=/home/claude/iris
ExecStart=/home/claude/iris/controller.sh
Restart=always
RestartSec=10
StandardOutput=append:/home/claude/iris/controller.log
StandardError=append:/home/claude/iris/controller.log

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
